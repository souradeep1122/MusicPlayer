<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Uploaded Files</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 24px;
    }
    h1 {
      margin-bottom: 16px;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      gap: 16px;
    }
    .card {
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 12px;
    }
    .thumb {
      width: 100%;
      height: 140px;
      object-fit: cover;
      border-radius: 6px;
      background: #f5f5f5;
    }
    .filename {
      margin-top: 8px;
      font-size: 14px;
      word-break: break-word;
    }
  </style>
</head>
<body>
  <h1>Uploaded Files</h1>

  <% if (!files || files.length === 0) { %>
    <p>No files found in the uploads folder.</p>
  <% } else { %>
    <div class="grid">
      <% files.forEach(function(file) {
        const lower = file.toLowerCase();
        const isImage = lower.endsWith('.png') || lower.endsWith('.jpg') || lower.endsWith('.jpeg') || lower.endsWith('.gif') || lower.endsWith('.webp') || lower.endsWith('.bmp') || lower.endsWith('.svg');
      %>
        <div class="card">
          <% if (isImage) { %>
            <a href="/uploads/<%= file %>" target="_blank">
              <img class="thumb" src="/uploads/<%= file %>" alt="<%= file %>" />
            </a>
          <% } else { %>
            <div class="thumb" style="display:flex;align-items:center;justify-content:center;color:#666;">
              <span>File</span>
            </div>
          <% } %>
          <div class="filename">
            <a href="/uploads/<%= file %>" target="_blank"><%= file %></a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <p style="margin-top:24px;"><a href="/">Back to upload page</a></p>
</body>
</html>
